{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"initializeCommand": "ssh-add ~/.ssh/private_github ~/.ssh/web-infra.pem",
	"postStartCommand": "git config core.hooksPath .githooks && pipenv sync --system",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.debugpy",
				"ms-python.isort",
				"ms-python.black-formatter",
				"ms-python.flake8",
				"ms-python.mypy-type-checker"
			]
		}
	}
}